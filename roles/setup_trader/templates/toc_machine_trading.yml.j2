simulation: {{ mt_config.simulation }}

trade_stock:
    allow_trade: {{ mt_config.trade_stock.allow_trade }}
    subscribe: {{ mt_config.trade_stock.subscribe }}

    # unit: second
    hold_time_from_open: {{ mt_config.trade_stock.hold_time_from_open }}
    trade_in_wait_time: {{ mt_config.trade_stock.trade_in_wait_time }}
    trade_out_wait_time: {{ mt_config.trade_stock.trade_out_wait_time }}
    cancel_wait_time: {{ mt_config.trade_stock.cancel_wait_time }}

    # unit: minute
    total_open_time: {{ mt_config.trade_stock.total_open_time }}
    trade_in_end_time: {{ mt_config.trade_stock.trade_in_end_time }}

trade_future:
    allow_trade: {{ mt_config.trade_future.allow_trade }}
    subscribe: {{ mt_config.trade_future.subscribe }}
    quantity: {{ mt_config.trade_future.quantity }}
